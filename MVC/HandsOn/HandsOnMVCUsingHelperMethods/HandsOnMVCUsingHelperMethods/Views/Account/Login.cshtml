
@{
    ViewBag.Title = "Login";
}
<div class="container">
    <form action="Login" method="post">
        <table class="table">
            <tr>
                <td>Username</td>
                <td>@Html.TextBox("username")</td>
            </tr>
            <tr>
                <td>Password</td>
                <td>@Html.Password("password")</td>
            </tr>
            <tr>
                <td colspan="2">
                   <input type="submit" value="Login" />
                </td>
            </tr>
        </table>
    </form>
</div>



@model HandsOnModels.Models.Employee
@{
    ViewBag.Title = "Creaet";
}

<div class="container">
	<br />
    <form action="Create" method="post">
		<table class="table">
			<tr>
				<td>ID</td>
				<td>
					<input type="number" name="EmployeeId" />
				</td>
			</tr>
			<tr>
				<td>Name</td>
				<td>
					<input type="text" name="Name" />
				</td>
			</tr>
			<tr>
				<td>JoinDate</td>
				<td>
					<input type="date" name="JoinDate" />
				</td>
			</tr>
			<tr>
				<td>Designation</td>
				<td>
					<select name="Designation">
						<option>Programmer</option>
						<option>Sr Programmer</option>
						<option>TeamLead</option>
					</select>
				</td>
			</tr>
			<tr>
				<td>Salary</td>
				<td>
					<input type="number" name="Salary" />
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<input type="submit" value="Create" />
				</td>
			</tr>
		</table>
    </form>
</div>

